version: '3'
services:
  gear:
    user: root
    ports:
      - "30333:30333"
      - "9933:9933"
      - "9944:9944"
      - "9615:9615"
    image: ghcr.io/gear-tech/node:latest
    volumes:
      - "/home/ec2-user/gear-data/:/gear/"
    command: gear-node purge-chain --base-path /gear/ --chain /gear/staging.json -y

volumes:
  gear-data:
