version: '3'
services:
  gear:
    user: root
    ports:
      - "30333:30333"
      - "9933:9933"
      - "9944:9944"
      - "9615:9615"
    image: "{{ gear_image_tag }}"
    restart: always
    environment:
      - RUST_LOG=essential
    volumes:
      - "/home/ec2-user/gear-data/:/gear/"
    command: >
      gear --base-path /gear/ --chain gear/vara.json --telemetry-url 'wss://telemetry.rs/submit 0' --prometheus-external
      {% if name is defined %} --name={{ name }} {% endif %}
      {% if rpc is not defined %} --validator --pruning 86400 {% endif %}
      {% if rpc is defined and unsafe == "yes" %} --unsafe-ws-external --pruning 86400 --ws-max-connections='1000' --unsafe-rpc-external {% endif %}
      {% if rpc is defined and unsafe == "no" and archive_node == "yes" %} --ws-max-connections='1000' --ws-external --rpc-external --pruning archive {% endif %}
      {% if rpc is defined %} --ws-max-connections='1000' --pruning 86400 --rpc-methods Unsafe --rpc-cors all {% endif %}
      {% if archive_node is defined and archive_node == "yes" and validator is defined and validator == "yes" %} --ws-max-connections='1000' --unsafe-ws-external --rpc-cors all --pruning archive {% endif %}

{% if loki is defined and loki == "yes" and loki_url is defined %}
    logging:
      driver: loki
      options:
        loki-url: "{{ loki_url }}"
        loki-tls-insecure-skip-verify: "true"
        loki-external-labels: job=docker_node,gear_network=vara
        loki-pipeline-stages: |
          - regex:
              expression: '(?P<error>ERROR.*)'
          - labels:
              error:
{% endif %}
volumes:
  gear-data:
